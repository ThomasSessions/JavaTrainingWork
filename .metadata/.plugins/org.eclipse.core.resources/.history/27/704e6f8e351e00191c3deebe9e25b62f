
public class TaskTwo {

	public void completeTask(int firstNumber, int secondNumber, boolean multiply, int[] numberArray, int loop) {

		for (loop = 0; loop < 10; loop++) {

			if (loop == 0) {
				System.out.println("Non 0 number is " + secondNumber);

			} else if ("Non 0 number is " + secondNumber == 0) {
				System.out.println(loop);

			} else if (multiply) {

				int total = Calculations.add(loop, secondNumber);
				String outputMessage = "The sum of " + loop + " and " + secondNumber + " is " + total;
				System.out.println(outputMessage);

			} else {

				int total = Calculations.multi(loop, secondNumber);
				String outputMessage1 = "The sum of " + loop + " and " + secondNumber + " is " + total;
				System.out.println(outputMessage1);
			}
		}
	}
}
