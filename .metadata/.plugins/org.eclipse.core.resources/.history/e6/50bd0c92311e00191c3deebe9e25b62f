
public class TaskTwo {

	
	public void completeTask(int firstNumber, int secondNumber, boolean multiply) {
		
		if (firstNumber == 0) {
			System.out.println(secondNumber);
			
		} if (secondNumber == 0) {
			System.out.println(firstNumber);
			
		}
		
		else if (multiply) {
		
		int total = Calculations.add(firstNumber, secondNumber);
		String outputMessage = "The sum of " + 
		firstNumber + " and " + secondNumber 
		+ " is " + total;
		System.out.println(outputMessage);
		
		} else {
			
		int total = Calculations.multi(firstNumber, secondNumber);
		String outputMessage1 = "The sum of " + 
		firstNumber + " and " + secondNumber 
		+ " is " + total;
		System.out.println(outputMessage1);
	}
	}
}

