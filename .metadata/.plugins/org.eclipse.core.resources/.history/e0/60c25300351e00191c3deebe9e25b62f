
public class TaskTwo {

	public void completeTask(int firstNumber, int secondNumber, boolean multiply, int i, int[] numberArray) {

		for (i = 0; i < 10; i++) {

			if (i == 0) {
				System.out.println(secondNumber);

			} else if (secondNumber == 0) {
				System.out.println(i);

			} else if (multiply) {

				int total = Calculations.add(i, secondNumber);
				String outputMessage = "The sum of " + i + " and " + secondNumber + " is " + total;
				System.out.println(outputMessage);

			} else {

				int total = Calculations.multi(i, secondNumber);
				String outputMessage1 = "The sum of " + i + " and " + secondNumber + " is " + total;
				System.out.println(outputMessage1);
			}
		}
	}
}
